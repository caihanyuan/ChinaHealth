<resources>

    <!-- Base application theme. -->
    <style name="Theme.ChinaHealth" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/little_gray</item>
        <item name="vpiTabPageIndicatorStyle">@style/Theme.ChinaHealth.TabPageIndicator</item>
    </style>

    <style name="Theme.ChinaHealth.TabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:background">@drawable/home_tab_pageindicator_background</item>
        <item name="android:textAppearance">@style/Theme.ChinaHealth.TabPageIndicator.Text</item>
        <item name="android:textColor">#FF555555</item>
        <item name="android:textSize">16sp</item>
        <item name="android:divider">@drawable/home_tab_pageindicator_divider</item>
        <item name="android:dividerPadding">10dp</item>
        <item name="android:showDividers">middle</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">8dp</item>
    </style>

    <style name="Theme.ChinaHealth.TabPageIndicator.Text" parent="android:TextAppearance.Medium">
        <item name="android:typeface">monospace</item>
    </style>

    <style name="Theme.ChinaHealth.SlidingMenuItem">
        <item name="android:background">@drawable/sliding_menu_item_background</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="Theme.ChinaHealth.HompageItem">
        <item name="android:paddingTop">@dimen/home_page_item_margin_top</item>
        <item name="android:paddingBottom">@dimen/home_page_item_margin_bottom</item>
        <item name="android:paddingLeft">@dimen/home_page_margin_left</item>
        <item name="android:paddingRight">@dimen/home_page_margin_right</item>
    </style>

    <style name="Theme.ChinaHealth.TextApperance" parent="android:TextAppearance.Small">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="Theme.ChinaHealth.TextApperance.Title" parent="Theme.ChinaHealth.TextApperance">
        <item name="android:textSize">20dp</item>
    </style>
</resources>
