<?xml version="1.0" encoding="utf-8"?>

<com.handmark.pulltorefresh.library.PullToRefreshScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ptr="http://schemas.android.com/apk/res-auto"
    android:id="@+id/homepages_main_pullrefresh_scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="@android:drawable/divider_horizontal_dim_dark"
    android:orientation="vertical"
    ptr:ptrAnimationStyle="flip"
    ptr:ptrMode="pullFromStart">

    <com.chinahelth.ui.homepush.HomePushView
        android:id="@+id/homepages_main_pushview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/home_push_view_margin_left"
        android:layout_marginRight="@dimen/home_push_view_margin_right"
        android:layout_marginTop="@dimen/home_push_view_margin_top" />

    <ListView
        android:id="@id/homepage_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</com.handmark.pulltorefresh.library.PullToRefreshScrollView>
