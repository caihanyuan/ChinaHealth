<?xml version="1.0" encoding="utf-8"?>
<merge>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/sliding_menu_item_normalbase_margin"
        android:orientation="horizontal">

        <ImageView
            android:id="@id/slidingmenu_item_img"
            android:layout_width="@dimen/sliding_menu_item_normalbase_img_width"
            android:layout_height="@dimen/sliding_menu_item_normalbase_img_height" />

        <TextView
            android:id="@id/slidingmenu_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/sliding_menu_item_normalbase_name_margin_left" />
    </LinearLayout>
</merge>